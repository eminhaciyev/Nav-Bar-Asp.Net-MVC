@using NavBarOtherMethod.Models
@model List<MenuCategory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Oxu.az</h2>

<nav class="navbar navbar-inverse ">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">Oxu.az</a>
        </div>
        <ul class="nav navbar-nav">
            @foreach (MenuCategory item in Model)
            {
                var action = item.Url.Split('/');

                <li>@Html.ActionLink(item.Name, action[1], action[0])</li>
            }
        </ul>
    </div>
</nav>

